{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "src",
      "allowJs": true,
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
   },
   "include": [
      "tests/**/*.ts",
     "src/**/*.ts",
     ".eslintrc.js"
   ],
   "exclude": [
      "node_modules",
      "dist"
   ]
}